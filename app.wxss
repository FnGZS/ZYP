}
.foot{

height:100rpx;

width:100%;

position: fixed;

bottom:0;

left:0;

border-top:1px solid #ddd;
 animation: footanimation 12s forwards;
 
}

.foot-no {
height:90rpx;

width:100%;

position: fixed;

bottom:0;

left:0;

border-top:1px solid #ddd;
}

@keyframes footanimation {
  0% {
    opacity: 0.0;
  }

  60% {
    opacity: 0.0;
  }

  100% {
    opacity: 1;
  }
}
.foot .tab{

width:25%;

float: left;

height:100%;

font-size:25rpx;

text-align:center;

padding-top:5rpx;

}
.tab view{
  margin-top:-10rpx;
}

.foot .tab image{

width:50rpx;

height:50rpx;

}

.foot .tab .tab-sele{

color: #BBDEF8;

}


