  background: url("https://www.sxscott.com/crazyBirdimg/test/voteBg.jpg")no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  /* background: linear-gradient(to right,#FF4341,#F27D6E); */
  position: relative;
  box-shadow: 0rpx 0rpx 20rpx 5rpx #b369fd;
}

.detail-headimg {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.detail-headimg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.detail-headtext {
  position: absolute;
  color: #fff;
  font-size: 25rpx;
  top: 74%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: 20rpx;
}

