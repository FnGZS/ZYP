.detail-main-right {
  width: 75%;
  margin-right: 5%;
  box-shadow: 0rpx 0rpx 20rpx 5rpx #e2e2e2;
  color: #818181;
  position: relative;
  -moz-border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 50rpx;
}

.detail-main-right:before {
  content: "";
  position: absolute;
  right: 100%;
  top: 25rpx;
  width: 0;
  height: 0;
  border-top: 13rpx solid transparent;
  border-right: 20rpx solid #eaeaea;
  border-bottom: 13rpx solid transparent;
}

