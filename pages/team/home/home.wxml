<!--pages/home/home.wxml-->
<swiper autoplay indicator-dots circular interval='2000'>
  <swiper-item wx:for='{{swiper}}' wx:key='index'>
    <image src="{{item.swiper_url}}"></image>
  </swiper-item>
 
</swiper>

<view class='splitline' wx:for='{{message}}' wx:key='index' >
  <view>
  <view url='/pages/profile/profile' hover-class='navigator'>
    <view class='home-head'>
      <!--头像加社团名-->
      <view class='left'>
        <image src='{{item.headUrl}}' class='bg'></image>
      </view>
      <view class='right'>
        <text>{{item.teamName}}</text>
        <text>{{item.time}}</text>
      </view>
    </view>
    </view>
    <view class='home-bottom'>
      <!--主题加内容-->
      <view class='head'>
        <text>{{item.head}}</text>
      </view>
      <view class='juxin'>
        <view class='neirong'>{{item.body}}</view>
        <view class='img-list'>
        
        <image wx:for-index='flag'  wx:for='{{item.bodyUrl}}'wx:for-item='image' src="{{image}}" data-src='{{image}}' data-list="{{item.bodyUrl}}" data-liulan="{{item.liulan}}" data-id="{{item.id}}" data-force='{{index}}' bindtap="previewImage"  >
        </image>
        </view>
      </view>
    </view>
    <view class='dianzan item'><!--点赞底部-->
      <view class='mleft'>
        <text>浏览{{item.liulan}}次</text>
      </view>
      <view class='mright'>
        <image src="/images/dianzan.png" bindtap='btnClick' data-id="{{item.id}}"  data-dianzan="{{item.dianzan}}" data-index='{{index}}'></image>
        <text>{{item.dianzan}}</text>
        <!-- <image src='/images/pinglun.png'></image>
        <text>168</text> -->
      </view>
    </view>
  </view>
</view>

<view>
<image src='/images/shetuanhuodong.png' class='fenxiang' bindtap="tiaozhuan"></image>
</view>

<view>
<image src='/images/jiantoushangsheng.png' class='fenxiang1' bindtap="backTop"></image>
</view>
