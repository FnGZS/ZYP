/* pages/team/team.wxss */
.team-head{
  display: flex;

  box-shadow: 2px 2px 5px #888
}
.team-head .team-input{
  font-size:12px;
  margin-left: 100rpx;
  margin-top:5px;
  margin-right: 100rpx;
}

.team-head .team-btn{
  font-size:12px;
  height:60rpx;
  width: 100rpx;
  background-color: rgb(29, 25, 25);
  color:white;
  margin-bottom: 5px;
  margin-top:5px
}

.team-body{
  display: flex;
  padding: 10px;
}
.team-body .left image{
  width: 120px;
  height:120px;
  display: block;
  border-radius: 10%;
  margin-right: 5px;
}
.team-body .right{
  margin-left: 10px;
  font-size: 20px;
 display: flex;
   flex-direction: column;/*方向为纵向*/ 
 /*  justify-content: space-around/*分散对齐*/
}
.team-body .body-text{
  font-size: 15px;
  margin-top: 20px;
  word-break: break-all;
  overflow:hidden;/* 一定要写 */
  text-overflow: ellipsis;/* 超出省略号 */
  display:-webkit-box;/* 一定要写 */
  -webkit-line-clamp: 3;/* 控制行数 */
  -webkit-box-orient: vertical;/* 一定要写 */
 /*  word-wrap: break-word; */

}
.team-body .mright{
  margin-right: 20rpx;
}

.right image{
  width: 30rpx;
  height:30rpx;
  
}
.body-hr+.body-hr{
  border-top: 1px solid #ccc;
}

.team-body .right text:nth-child(1){
  font-weight: bold;/*加粗*/
}

page{ height:100%;}