<view class="red_wrap">
    <view class="one" wx:if="{{btn==true}}"></view>
    <view class="two"></view>
    <view class="three">
        <image class="two-img-bg" mode="widthFix" src="../../../resource/images/open-back-1.png"></image>
        <image class="two-img" mode="widthFix" src="../../../resource/images/open-back-1.png"></image>
    </view>
    <view class="txt" style="{{txt==true?'opacity: 1;':'opacity: 0;'}}" wx:if="{{txt==true}}">
        <scroll-view class="txt-container" scrollY="true">
            <view class="gift-wrap">
                <view class="gift">
                    <text class="iconfont icon-liwu"></text>
                </view>
            </view>
            <view class="font-30 color_red font-w txt-center">恭喜，你已中奖</view>
            <view class="btn_wrap">
                <button class="btn1 font-28 color_fff">填写收货地址</button>
                <button class="btn2 font-28">炫耀一下</button>
            </view>
            <view class="title font-28">中奖者名单</view>
            <view class="list-wrap">
                <view class="list">
                    <image class="header" mode="widthFix" src="{{userInfo.avatarUrl}}"></image>
                    <view class="font-28">{{userInfo.nickName}}</view>
                </view>
            </view>
            <view>
                <button class="btn-3 font-30 font-w color_fff">再发起一个抽奖</button>
            </view>
        </scroll-view>
    </view>
</view>
