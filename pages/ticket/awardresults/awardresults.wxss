page {
    height: 100%;
    transform-style: preserve-3d;
    background: rgba(0,0,0,0.3);
}

.red_wrap {
    position: relative;
    height: 100%;
}

.one {
    width: 792rpx;
    height: 880rpx;
    background: url(http://bmvqgd.img48.wal8.com/img48/17288183_20180408105809/s/152394699444_medium.png);
    background-size: cover;
    position: absolute;
    z-index: 10;
    left: 50%;
    margin-left: -396rpx;
    bottom: 0;
}

.btn {
    position: absolute;
    width: 226rpx;
    height: 226rpx;
    background-image: url(http://bmvqgd.img48.wal8.com/img48/17288183_20180408105809/s/152394699402_medium.png);
    background-size: contain;
    left: 50%;
    margin-left: -113rpx;
    z-index: 100;
    bottom: 440rpx;
    border-radius: 50%;
    animation: open 0.2s linear 0.5s infinite alternate;
    animation-timing-function: cubic-bezier(0.25,0.1,0.25,1);
}

@keyframes open {
    0% {
        transform: scale(1);
    }

    100% {
        transform: scale(0.9);
    }
}

@-webkit-keyframes open {
    0% {
        -webkit-transform: scale(1);
    }

    100% {
        -webkit-transform: scale(0.9);
    }
}

.two {
    width: 792rpx;
    height: 880rpx;
    background: url(http://bmvqgd.img48.wal8.com/img48/17288183_20180408105809/152394699439.png);
    background-size: cover;
    position: absolute;
    z-index: 12;
    left: 50%;
    margin-left: -396rpx;
    bottom: 0;
    transform-style: preserve-3d;
}

.two-img-top {
    width: 792rpx;
    height: 312rpx;
    position: absolute;
    left: 0;
    top: -312rpx;
    animation: topimg 0.5s;
}

@keyframes topimg {
    0% {
        opacity: 0;
    }

    99% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.two-img-bg {
    position: absolute;
    width: 792rpx;
    top: 0;
    left: 0;
}

.two-img {
    position: absolute;
    width: 792rpx;
    top: 0;
    left: 0;
    transform-origin: 50% 0%;
    animation: flipBook1 1.5s;
    transform: rotateX(180deg);
    z-index: 8;
    opacity: 1;
}

@keyframes flipBook1 {
    0% {
        transform: rotateX(0deg);
    }

    100% {
        transform: rotateX(180deg);
    }
}

.txt {
    width: 580rpx;
    height: 80%;
    background: #fff;
    animation: show 1.5s;
    position: absolute;
    z-index: 11;
    left: 50%;
    margin-left: -290rpx;
    top: 60rpx;
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}

@keyframes show {
    0% {
        top: 600rpx;
        opacity: 0;
    }

    100% {
        top: 60rpx;
        opacity: 1;
    }
}

.three {
    width: 792rpx;
    height: 880rpx;
    position: absolute;
    z-index: 3;
    left: 50%;
    margin-left: -396rpx;
    bottom: 0;
    transform-style: preserve-3d;
}

.txt-container {
    border: 1rpx solid #d7c47f;
    height: 100%;
    border-radius: 10rpx;
}

.gift-wrap {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background: #e2463a;
    margin: 30rpx auto;
    padding: 10rpx;
    box-sizing: border-box;
}

.gift {
    height: 180rpx;
    width: 180rpx;
    border-radius: 50%;
    border: 1rpx solid #eb6f67;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.icon-liwu {
    color: #fff;
    font-size: 76rpx;
}

.btn_wrap {
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
}

.btn_wrap button {
    height: 68rpx;
    line-height: 68rpx;
    width: 48%;
    text-align: center;
    border-radius: 0;
}

.btn1 {
    background: #575757;
}

.btn2 {
    color: #575757;
    border: 1rpx solid #575757;
}

.title {
    height: 60rpx;
    line-height: 60rpx;
    position: relative;
    text-align: center;
    color: #555555;
}

.title::before {
    content: "";
    position: absolute;
    width: 100rpx;
    height: 1rpx;
    background: #cccccc;
    top: 30rpx;
    left: 50%;
    margin-left: 100rpx;
}

.title::after {
    content: "";
    position: absolute;
    width: 100rpx;
    height: 1rpx;
    background: #cccccc;
    top: 30rpx;
    right: 50%;
    margin-right: 100rpx;
}

.header {
    width: 80rpx;
    border-radius: 50%;
    margin: 30rpx 0 10rpx 0;
}

.list-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 0 30rpx;
}

.list {
    text-align: center;
    width: 30%;
}

.btn-3 {
    background: #d15243;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 0;
    margin: 60rpx auto;
}