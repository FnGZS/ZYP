page {
    background: #f0f0f0;
}

.box1 {
    border: 1rpx solid #c0c0c0;
    margin: 30rpx;
    border-radius: 10rpx;
    background: #fff;
}

.box1-list {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    margin: 0 30rpx;
    border-bottom: 1rpx solid #ebebeb;
    font-size: 32rpx;
    align-items: center;
}

.color_red {
    color: #cc6054;
}

.box1-list image {
    width: 60rpx;
    height: 60rpx;
}

.box1-list1 {
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 30rpx;
    color: #999;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.box1-list1 image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.flex {
    display: flex;
    align-items: center;
}

.box2_wrap {
    margin: 0 30rpx;
    background: #f45e5d;
    height: 300rpx;
    border-radius: 10rpx;
    padding: 30rpx;
    position: relative;
}

.box2_dot {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.dot {
    position: absolute;
    height: 14rpx;
    width: 14rpx;
    border-radius: 50%;
    left: 8rpx;
    top: 8rpx;
    background: #000;
}

.box2 {
    background: #8b202a;
    border-radius: 10rpx;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    overflow: hidden;
    border-bottom: 20rpx solid #8b202a;
}

.box2-con {
    border-radius: 10rpx;
    display: flex;
    justify-content: space-between;
    position: relative;
}

.box2-con-list_wrap {
    width: 180rpx;
    border-radius: 10rpx;
    border: 1rpx solid #6c040f;
    overflow: hidden;
    height: 260rpx;
}

.box2-con-list {
    border-radius: 10rpx;
    width: 180rpx;
    background: #fefdf8;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.box2-con-list image {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    margin: 75rpx 0;
    flex: 0 0 auto;
    background: #fefdf8;
}

.bg_fff {
    background: #fff;
    border: 1rpx solid #ddd;
}

.box2-3 {
    position: absolute;
    left: 50rpx;
    bottom: 50rpx;
    right: 50rpx;
    top: 50rpx;
    background: #fefdf8;
    border-radius: 10rpx;
    z-index: 3;
    text-align: center;
    color: #bd9706;
    display: none;
}

button::after {
    border: none;
}

.box2-3-title2 {
    font-weight: bold;
    margin-bottom: 35rpx;
    font-size: 32rpx;
}

.box2-3-title1 {
    font-size: 26rpx;
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
}

.box2-3-title1::after {
    content: "";
    width: 30rpx;
    height: 1rpx;
    background: #bd9706;
    position: absolute;
    top: 38rpx;
    left: 50%;
    margin-left: 50rpx;
}

.box2-3-title1::before {
    content: "";
    width: 30rpx;
    height: 1rpx;
    background: #bd9706;
    position: absolute;
    top: 38rpx;
    right: 50%;
    margin-right: 50rpx;
}

.btn2 {
    height: 60rpx;
    line-height: 60rpx;
    width: 220rpx;
    border-radius: 160rpx;
    border: 1px solid #bd9706;
    color: #bd9706;
    background: none;
    font-size: 30rpx;
}

.box3 {
    margin: 0 30rpx;
    position: absolute;
    top: 228rpx;
    left: 0;
    right: 0;
    z-index: 1;
    height: 0;
    overflow: hidden;
    z-index: -1;
}

.box3-title {
    font-size: 32rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}

.box3_con {
    display: flex;
    justify-content: center;
    padding: 0 30rpx;
    font-size: 28rpx;
    text-align: center;
    flex-wrap: wrap;
}

.box3-list {
    margin: 30rpx;
}

.box3_con image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.btn {
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    border-radius: 70rpx;
    background: #e15f4f;
    border: 1rpx solid #a9493d;
    margin-top: 50rpx;
    margin-bottom: 100rpx;
}

.color_blue {
    color: #47749e;
}

.box3-list2 {
    display: flex;
    flex-wrap: wrap;
    padding: 30rpx;
    justify-content: center;
}

.box3-list2 image {
    width: 70rpx;
    height: 70rpx;
    margin: 0 20rpx;
}

.dddd {
    height: 40px;
}

.dddd {
    height: 40px;
    line-height: 40px;
    border: 1px solid #ddd;
    overflow: hidden;
    display: flex;
}

.ddd {
    width: 30px;
    height: 30px;
    border-radius: 50%;
}

.dddddd {
    display: flex;
    flex-direction: column;
}