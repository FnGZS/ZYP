page {
    background: #f0f0f0;
}

.title {
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
}

.container {
    background: #fff;
    border-bottom: 10rpx solid #f0f0f0;
}

.header {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.list {
    min-height: 80rpx;
    margin: 0 30rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    padding: 10rpx 0;
}

.list:first-child {
    border-bottom: 1rpx solid #ddd;
}