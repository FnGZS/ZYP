<view class="container">
    
    <view class="banner">
        <button bindtap="upload" class="color_808080 font-28">更换奖品图片</button>
        <image src="https://www.sxscott.com/crazyBirdimg/test/luckDraw/resource/images/banner.jpg"></image>
        <image src="{{imgSrc==''?'../../../resource/images/banner.jpg':imgSrc}}" wx:if="{{cjzt}}"></image>
        
    </view>
    <view>
        
        <view >
         <block wx:for='{{addticketArr}}' wx:key = '{{index}}'>
         
            
            <view class="{{index != 0 && index==addticketArr.length-1? 'listStyle' : 'list'}} font-30 bg_fff ">
            <block wx:if='{{index != 0 && index==addticketArr.length-1}}'>
            <view bindtap = 'removeTicket'> <image class='jian' src='https://www.sxscott.com/crazyBirdimg/test/luckDraw/resource/images/jian.png'></image></view>
            </block>
                <text class="flex-0-0">奖品名称</text>
                <view class="list-warn-box color_fff font-24" wx:if="{{gName[index]==''}}">请输入奖品名称</view>
                <view class="list-warn-box color_fff font-24" wx:if="{{(gName[index]==undefined&&gName[index+1]!=undefined)||(gName[index-1]!=undefined&&gName[index]==undefined&&gName[index+1]!=undefined)}}">请输入奖品名称</view>
                <input data-index='{{index}}' bindinput="bindKeyInput1" class="list-input-1 flex-1-1" maxlength="20" placeholder="请输入奖品名称" type="text"></input>
            </view>
           
            <view class="{{index != 0 && index==addticketArr.length-1? 'listStyle' : 'list'}} font-30 bg_fff listTwo">
            
                <text class="flex-0-0">奖品数量</text>
                <view class="list-warn-box color_fff font-24" wx:if="{{inputValue2[index]>100}}">数量不能超过100</view><view class="list-warn-box color_fff font-24" wx:if="{{(inputValue2[index]==undefined&&inputValue2[index+1]!=undefined)||(inputValue2[index-1]!=undefined&&inputValue2[index]==undefined&&inputValue2[index+1]!=undefined)}}">请输入奖品数量</view>
                <view class="list-right">
                    <input data-index='{{index}}' bindinput="bindKeyInput2" class="list-input-2" maxlength="3" placeholder="数量" type="number"></input>
                    <text class="flex-0-0">个</text>
                </view>
            </view >
            </block>
            <view class='list_add_box'><view class='list_add font-30' bindtap='addTicket'>+ 增加奖项</view></view>
            <view class="list font-26 list-2" >
              <text class="flex-0-0 color_8d8d8d" >抽奖说明</text>
              <text class="flex-0-0 color_8d8d8d" >非必填</text>
            </view>
            <view class='ticket_say font-26'><view>填写此抽奖的说明</view></view>
        </view>
        <view bindtap="chooselotterytime" class="list list-2 font-26">
            <text class="flex-0-0 color_8d8d8d" wx:if="{{index==0}}">到达设定时间自动开奖</text>
            <text class="flex-0-0 color_8d8d8d" wx:if="{{index==1&&day&&day!=0}}">{{day}}内到达设定人数自动开奖</text>
            <text class="flex-0-0 color_8d8d8d" wx:if="{{index==1&&!day||index==1&&day==0}}">3天内到达设定人数自动开奖</text>
            <text class="flex-0-0 color_8d8d8d" wx:if="{{index==2}}">发起人手动开奖</text>
            <text class="flex-0-0 color_8d8d8d" wx:if="{{index==3}}">现场抽奖</text>
            <view class="color_2574b9">
        修改开奖条件
        <text class="iconfont icon-you color_808080 color_2574b9 font-24 "></text>
            </view>
        </view>
        <view wx:if="{{index==0}}">
            <view bindtap="choosetime" class="list list-1 font-30 bg_fff">
                <text class="flex-0-0">开奖时间</text>
                <view class="list-warn-box  color_fff font-24" style="right:360rpx;" wx:if="{{inputValue6show==true}}">时间不能早于当前</view>
                <view class="list-right color_808080 font-28">
                    <text>{{dateArray}} {{nowhour<hour||nowhour==hour?hour:nowhour}}:{{minute}}</text>
                    <text class="iconfont icon-you color_808080 time-next"></text>
                </view>
            </view>
            <picker-view bindchange="bindChange" class="bg_fff picker-view" indicatorStyle="height: 34px; line-height:34px;" value="{{value}}" wx:if="{{showtime==true}}">
                <picker-view-column>
                    <view class="font-28 " wx:for="{{dateArrays}}">{{item}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view class="font-28 " wx:for="{{hours}}">{{item}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view class="font-28 " wx:for="{{minutes}}">{{item}}</view>
                </picker-view-column>
            </picker-view>
        </view>
        <view wx:if="{{index==1}}">
            <view class="list font-32 bg_fff">
                <text class="flex-0-0">开奖人数</text>
                <view class="list-warn-box  color_fff font-24" style="right:180rpx;" wx:if="{{inputValue5show==true}}">开奖人数不能为空</view>
                <view class="list-right">
                    <input bindinput="bindKeyInput5" class="list-input-2" maxlength="3" placeholder="人数" type="number"></input>
                    <text class="flex-0-0">人</text>
                </view>
            </view>
            <view class="list-msg color_808080 font-26" wx:if="{{day&&day!=0}}">如未达到指定人数，{{day}}天后将自动开奖</view>
            <view class="list-msg color_808080 font-26" wx:if="{{!day||day==0}}">如未达到指定人数，3天后将自动开奖</view>
        </view>
        <view wx:if="{{index==2}}">
            <view class="list font-32 bg_fff">
                <text class="flex-0-0 color_808080">由发起人手动开奖</text>
            </view>
            <view class="list-msg color_808080 font-26">如未手动开奖，3天后将失效</view>
        </view>
        <view wx:if="{{index==3}}">
            <view class="list font-32 bg_fff">
                <text class="flex-0-0 color_808080">由发起人现场开奖</text>
            </view>
            <view class="list-msg color_808080 font-26">对在线的参与者实时开奖</view>
        </view>
        <view style="height:500rpx"></view>
    </view>
</view>
<view class="fix_bottom bg_fff" >
    <button bindtap="goTicketdetail" class="btn1 color_fff bg_red font-30" formType="submit">
        <text class="iconfont icon-xianchangguanli" wx:if="{{index==3}}"></text> 发起新抽奖</button>
</view>
<view wx:if="{{showpaly}}">
    <view class="mask"></view>
    <view class="paly_box bg_fff font-30">
        <view bindtap="closeplay" class="paly_box-list" data-index="{{index}}" wx:for="{{palylist}}" wx:key=" ">{{item}}</view>
    </view>
</view>
