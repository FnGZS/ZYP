/* pages/user/binding/binding.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

.cont {
  width: 100%;
  height: 100%;
  /* background: red; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.cont-big {
  width: 90%;
  height: 900rpx;
  /* background: antiquewhite; */
}

.cont-bg {
  width: 90%;
  height: 900rpx;
  background: rgb(250, 250, 250);
  opacity: 0.9;
  position: absolute;
  z-index: -1;
  box-shadow: 2rpx 2rpx 30rpx #7e7c7c;
}

.cont-head {
  width: 100%;
  height: 150rpx;
  /* background: aqua; */
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  z-index: 1;
}

.Firsttitle {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  padding-top: 50rpx;
  color: #6b7281;
}

.Secondtitle {
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #6b7281;
}

.cont-ipm {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cont-middle {
  width: 100%;
  height: 600rpx;
  /* background: antiquewhite; */
  padding-top: 20rpx;
}

.cont-middle-input {
  width: 80%;
  height: 100rpx;
  background: white;
  margin: 0 auto;
  margin-top: 40rpx;
}

.cont-middle-input input {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 40rpx;
  font-size: 30rpx;
}

.cont-middle-help {
  width: 75%;
  height: 200rpx;
  background-color: white;
  margin: 0 auto;
  margin-top: 40rpx;
  padding-left: 40rpx;
  padding-top:20rpx;
   font-size: 30rpx;
   color: #6b7281;
}

.cont-middle-help ul {
  width: 100%;
  height: 200rpx;
  /* background: azure; */
 font-size: 20rpx;
 /* margin-top: 20rpx; */

}

.cont-middle-help ul li {
  width: 100%;
  height: 30rpx;
  float: left;
  margin-top: 10rpx;
}
.cont-middle-help ul li image{
  width: 30rpx;
  height: 30rpx;
}
.cont-btn button{
  width: 80%;
  background: #F56E4E;
  color: white;
}
