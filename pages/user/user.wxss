@import '../../style/usericon/iconfont.wxss';

page {
  height: 100%;
}

.user-btn {
  width: 100%;
  height: 900rpx;
  /* background: salmon; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -100rpx;
}

.container {
  width: 95%;
  height: 900rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  border-radius: 20rpx;
}

.container-bg {
  width: 100%;
  height: 900rpx;
  background: white;
  border-radius: 20rpx;
  opacity: 0.9;
  box-shadow: 2rpx 2rpx 30rpx #7e7c7c;
}

.user-img {
  width: 100%;
  height: 300rpx;
  /* background: red; */
}

.user-img image {
  width: 100%;
  height: 100%;
}

.user-conter {
  width: 100%;
  height: 100%;
  /* background: rebeccapurple; */
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1;
  position: absolute;
  top: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 5rpx solid white;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20rpx;
  background: red;
  width: 90%;
  height: 700rpx;
  position: absolute;
  top: 350rpx;
}

.usermotto-top {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.user-cont {
  width: 95%;
  height: 100rpx;
  background: palegoldenrod;
  border: 1rpx solid #aaa;
  display: flex;
  align-items: center;
}

.user-cont-left {
  width: 50rpx;
  height: 50rpx;
  background: azure;
  margin-left: 30rpx;
}

.user-cont-center {
  width: 75%;
  height: 50rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  background: aquamarine;
}

.user-cont-rigth {
  width: 50rpx;
  height: 50rpx;
  background: antiquewhite;
}
.usermotto-foot{
   width: 100%;
   margin-top: 30rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}