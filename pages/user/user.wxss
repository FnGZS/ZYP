@import '../../style/usericon/iconfont.wxss';

page {
  height: 100%;
}

.user-btn {
  width: 100%;
  height: 900rpx;
  /* background: salmon; */
  margin-top: -100rpx;
}

.container {
  /* margin-left: 3%; */
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 94%;
  height: 900rpx;
  flex-wrap: wrap;
  border-radius: 20rpx;
  position: relative;
}

.container-bg {
  width: 100%;
  height: 900rpx;
  background: white;
  border-radius: 20rpx;
  opacity: 0.9;
  box-shadow: 2rpx 2rpx 30rpx #7e7c7c;
}

.user-img {
  width: 100%;
  height: 300rpx;
  /* background: red; */
}

.user-img image {
  width: 100%;
  height: 100%;
}

.user-conter {
  width: 100%;
  height: 100%;
  /* background: rebeccapurple; */
}

.userinfo {
  width: 300rpx;
  height: 90rpx;
  font-size: 14rpx;
  opacity: 1;
  position: absolute;
  top: -90rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
}
.userinfo>button{
  font-size: 24rpx;
  line-height: 90rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  top: 94rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin:auto;
  border-radius: 50%;
  border: 5rpx solid white;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 28rpx;
  position: absolute;
  top:170rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
}

.usermotto {
  /* margin-top: 20rpx; */
  /* margin-left: 2%; */
  /* background: red; */
  width: 96%;
  height: 700rpx;
  position: absolute;
  top: 110rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.usermotto-top {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
     box-shadow: 1rpx 1rpx 50rpx #E1E1E4;
}

.user-cont {
  width: 100%;
  height: 90rpx;
  /* background: palegoldenrod; */
  border: 1rpx solid #E1E1E4;
  border-top:0rpx;
  display: flex;
  align-items: center;
  color: #6D6C6B;
}

.user-cont-left {
  width: 50rpx;
  height: 50rpx;
  /* background: azure; */
  margin-left: 30rpx;
  font-size: 40rpx;
    line-height: 60rpx;
}

.user-cont-center {
  width: 75%;
  height: 50rpx;
  font-size: 28rpx; 
  line-height: 60rpx;
  padding-left: 20rpx;
  /* background: aquamarine;  */
}

.user-cont-rigth {
  width: 50rpx;
  height: 50rpx;
  /* background: antiquewhite; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-cont-rigth image{
  width: 70%;
  height: 70%;
}
.usermotto-foot{
   width: 100%;
   margin-top: 30rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
    box-shadow: 1rpx 1rpx 50rpx #E1E1E4;
}
.service{
  width: 600rpx;
  height: 60rpx;
  background: white;
  text-align: left;
  margin-top: -5rpx;
  font-size:28rpx;

  
}
