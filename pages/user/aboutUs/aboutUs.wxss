page{
  width: 100%;
  height: 100%;
  background: #efeff4;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.about-box{
  margin-top: 40rpx;
  width: 90%;
  height: 100%;
}
.about-box-head{
  width: 100%;
  height: 300rpx;
}
.about-box-head-icon{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.about-box-head-icon-box{
  width: 130rpx;
  height: 130rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
}
.about-box-head-icon-box image{
  width: 100%;
  height: 100%;
  
}
.about-box-head-text{
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
  font-weight: 700;
}
.about-box-body{
  width: 100%;
  min-height: 155rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.about-box-body-content{
  width: 90%;
  font-size: 26rpx;
  color: #757575;
}
.about-box-foot{
  width: 100%;
  min-height: 280rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.about-box-foot-title{
  width: 90%;
  height: 90rpx;
  line-height: 120rpx;
  font-weight: 700;
  font-size: 30rpx;
}
.about-box-foot-content{
  width: 90%;
  height: 177rpx;
  font-size: 26rpx;
  color: #757575;
  line-height: 60rpx;
}
