/* pages/user/joinVote/joinVote.wxss */
page{
  width: 100%;
  height: 100%;
  background:white;
  display: flex;
  flex-direction: column;
}
.joinVote{
  width: 750rpx;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.joinVote-box{
  width: 90%;
  height: 90%;
  background: #fff;
}
.joinVote-box-up{
  width: 95%;
  height: 50%;
  border-bottom: 4rpx solid #f5f5f5;
  margin-left: 5%;
  display: flex;
  flex-wrap: nowrap;
}
.joinVote-box-up-text{
  font-size: 36rpx;
  line-height: 120rpx;
}
.joinVote-box-up-img{
  width: 60rpx;
  height: 120rpx;
  margin-left: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.joinVote-box-up-img image{
  width: 100%;
  height: 30%;
}
.joinVote-box-down{
  margin-left: 5%;
  width: 95%;
  display: flex;
  flex-direction: row;
  position: relative;
}
.joinVote-box-time{
  color: #8d8d8d;
  line-height: 120rpx;
  
}
.joinVote-box-state{
  color: #7be564;
  line-height: 120rpx;
  position: absolute;
  right: 30rpx;
}
.jionVote-empty{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #b3b3b4;
  font-size: 30rpx;
}
.joinVote-empty-img{
  margin: 400rpx 0 50rpx 0;
  width: 220rpx;
  height: 200rpx;
}
.joinVote-empty-img image{
  width: 100%;
  height: 100%;
}
.voteList {
  width: 100%;
  /* display: flex;
  flex-wrap: wrap; */
    /* padding-left: 5%;
  padding-right: 5%; */
  
  margin-top:20rpx;
}

.list-main {
  width: 90%;
  height: 300rpx;
  background: #fff;
  box-shadow: 7rpx 7rpx 20rpx rgb(170, 170, 170);
margin: 0 auto;
  margin-top: 15rpx;
  /* margin-right: 2%; */

  position: relative;
}
.list-shadow{
  width: 100%;
  height: 60rpx;
  background: black;
  position: absolute;
  bottom: 0;
  opacity: 0.4;
}
.list-main-title{
  width: 60%;
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  bottom: 10rpx;
  left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.list-main-partin{
  width: 25%;
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  bottom: 10rpx;
  right: 20rpx;
  text-align: center;
}