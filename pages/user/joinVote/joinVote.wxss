/* pages/user/joinVote/joinVote.wxss */
page{
  width: 100%;
  height: 100%;
  background: #efeff4;
  display: flex;
  flex-direction: column;
}
.joinVote{
  width: 750rpx;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.joinVote-box{
  width: 90%;
  height: 90%;
  background: #fff;
}
.joinVote-box-up{
  width: 95%;
  height: 50%;
  border-bottom: 4rpx solid #f5f5f5;
  margin-left: 5%;
  display: flex;
  flex-wrap: nowrap;
}
.joinVote-box-up-text{
  font-size: 36rpx;
  line-height: 120rpx;
}
.joinVote-box-up-img{
  width: 60rpx;
  height: 120rpx;
  margin-left: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.joinVote-box-up-img image{
  width: 100%;
  height: 30%;
}
.joinVote-box-down{
  margin-left: 5%;
  width: 95%;
  display: flex;
  flex-direction: row;
  position: relative;
}
.joinVote-box-time{
  color: #8d8d8d;
  line-height: 120rpx;
  
}
.joinVote-box-state{
  color: #7be564;
  line-height: 120rpx;
  position: absolute;
  right: 30rpx;
}
.jionVote-empty{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #b3b3b4;
  font-size: 30rpx;
}
.joinVote-empty-img{
  margin: 400rpx 0 50rpx 0;
  width: 220rpx;
  height: 200rpx;
}
.joinVote-empty-img image{
  width: 100%;
  height: 100%;
}
