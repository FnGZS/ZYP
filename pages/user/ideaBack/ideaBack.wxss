page{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ideaBack{
  width: 90%;
  height: 100%;
}
.ideaBack-content{
  width: 100%;
  min-height: 130rpx;
  margin-bottom: 40rpx;
}
.ideaBack-content-text{
  font-weight: 500;
  line-height: 70rpx;
}
.ideaBack-content-text text{
  color: red;
}
.ideaBack-content-btn1{
  width: 100%;
  height: 200rpx;
  border: 1px solid #e8e8e8;
  border-radius: 10rpx;
}
.ideaBack-content-btn2{
  width: 100%;
  height: 60rpx;
  border: 1px solid #e8e8e8;
  border-radius: 10rpx;
}
.ideaBack-bottom{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #e8e8e8;
  color: #888888;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
}